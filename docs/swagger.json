{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/api/v1/user/auth": {
            "post": {
                "description": "Аутентифицирует пользователя с помощью логина и пароля. Выдает ему access/refresh пару токенов",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "userAuth",
                "operationId": "userAuth",
                "parameters": [
                    {
                        "description": "Данные пользователя",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UserAuthReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.RespSucc"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/models.RespErr"
                        }
                    }
                }
            }
        },
        "/api/v1/user/confirm/registration": {
            "get": {
                "description": "Завершает регистрацию пользователя и выдает access/refresh пару токенов",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "userConfirm",
                "operationId": "userConfirm",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Код подтверждения (с почты)",
                        "name": "code",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.RespSucc"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/models.RespErr"
                        }
                    }
                }
            }
        },
        "/api/v1/user/refresh": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Выдает новый access токен пользователю с помощью refresh токена",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "userRefresh",
                "operationId": "userRefresh",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.RespSucc"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/models.RespErr"
                        }
                    }
                }
            }
        },
        "/api/v1/user/register": {
            "post": {
                "description": "Валидирует и отправляет на почту пользователя ссылку для завершения регистрации",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "userRegister",
                "operationId": "userRegister",
                "parameters": [
                    {
                        "description": "Данные пользователя",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UserRegReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.RespSucc"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "$ref": "#/definitions/models.RespErr"
                        }
                    }
                }
            }
        },
        "/status": {
            "get": {
                "description": "Показывает статус запуска приложения (сервера).",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Liveness"
                ],
                "summary": "status",
                "operationId": "status",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.RespSucc"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.RespErr": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "HTTP-код ошибки",
                    "type": "integer"
                },
                "message": {
                    "description": "Сообщение об ошибке",
                    "allOf": [
                        {
                            "$ref": "#/definitions/models.RespErrMsg"
                        }
                    ]
                },
                "status": {
                    "description": "Статус ответа = \"error\"",
                    "type": "string"
                }
            }
        },
        "models.RespErrMsg": {
            "type": "object",
            "properties": {
                "client": {
                    "description": "Ошибка для клиента (на русском языке)",
                    "type": "string"
                },
                "detail": {
                    "description": "Ошибка для разработчика",
                    "type": "string"
                }
            }
        },
        "models.RespSucc": {
            "type": "object",
            "properties": {
                "body": {
                    "description": "Тело ответа",
                    "allOf": [
                        {
                            "$ref": "#/definitions/models.RespSuccData"
                        }
                    ]
                },
                "code": {
                    "description": "HTTP-код",
                    "type": "integer"
                },
                "status": {
                    "description": "Статус ответа = \"success\"",
                    "type": "string"
                }
            }
        },
        "models.RespSuccData": {
            "type": "object",
            "properties": {
                "data": {}
            }
        },
        "models.UserAuthReq": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "models.UserRegReq": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        }
    }
}